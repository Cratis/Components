            "import": "./dist/esm/dialogs/index.js"
        },
        "./identity": {
            "types": "./dist/esm/identity/index.d.ts",
            "require": "./dist/cjs/identity/index.js",
            "import": "./dist/esm/identity/index.js"
        }
    },
    "scripts": {
        "prepare": "yarn build",
        "clean": "tsc -b --clean",
        "build": "vite build",
        "lint": "eslint --cache --quiet --fix",
        "lint:ci": "eslint --cache --quiet",
        "test": "vitest run",
        "ci": "yarn clean && yarn lint:ci && yarn build && yarn test",
        "up": "ncu -u && yarn",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build"
    },
